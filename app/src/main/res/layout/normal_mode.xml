<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BlueScrollView">

    <LinearLayout style="@style/QuizLinear">

        <TextView
            style="@style/NormalMode"
            android:text="@string/normalmode" />

        <ImageView style="@style/QuizBlueCarImg" />

        <View style="@style/NormalQuizStripe" />

        <TextView
            style="@style/questions"
            android:text="@string/howmanyseats" />

        <RadioGroup
            android:id="@+id/SeatsRadio"
            style="@style/RadioGroup">

            <RadioButton
                android:id="@+id/one"
                style="@style/BlueLeftRadio"
                android:text="@string/one" />

            <RadioButton
                android:id="@+id/two"
                style="@style/BlueMidRadio"
                android:text="@string/two" />

            <RadioButton
                android:id="@+id/four"
                style="@style/BlueRightRadio"
                android:text="@string/four" />

        </RadioGroup>

        <View style="@style/BlueStripe" />

        <TextView
            style="@style/questions"
            android:text="@string/carbrand" />

        <ImageView style="@style/FerrariImg" />

        <!-- Stop auto focussing the EditText -->
        <View style="@style/FocusedView" />

        <EditText
            android:id="@+id/BrandEdtTxt"
            style="@style/BrandEdtTxt" />

        <View style="@style/BlueStripe" />

        <TextView
            style="@style/questions"
            android:text="@string/volkswagen" />

        <LinearLayout style="@style/CheckBoxesLinear">

            <CheckBox
                android:id="@+id/AudiCheckBox"
                style="@style/BlueCheckBoxes"
                android:text="@string/audi" />

            <CheckBox
                android:id="@+id/FerrariCheckBox"
                style="@style/BlueMidCheckBox"
                android:text="@string/ferrari" />

            <CheckBox
                android:id="@+id/PorscheCheckBox"
                style="@style/BlueCheckBoxes"
                android:text="@string/porsche" />

        </LinearLayout>

        <View style="@style/BlueStripe" />

        <TextView
            style="@style/questions"
            android:text="@string/fastestcar" />

        <RadioGroup
            android:id="@+id/VerticalRadio"
            style="@style/VerticalRadioGroup">


            <RadioButton
                android:id="@+id/Bugatti"
                style="@style/VerticalBlueRadio"
                android:text="@string/bugatti" />

            <RadioButton
                android:id="@+id/Venom"
                style="@style/VerticalBlueMidRadio"
                android:text="@string/venom" />

            <RadioButton
                android:id="@+id/Aero"
                style="@style/VerticalBlueRadio"
                android:text="@string/aero" />

        </RadioGroup>

        <View style="@style/BlueStripe" />

        <TextView
            style="@style/questions"
            android:text="@string/italiancars" />

        <LinearLayout style="@style/CheckBoxesLinear">

            <CheckBox
                android:id="@+id/Opel"
                style="@style/BlueCheckBoxes"
                android:text="@string/opel" />

            <CheckBox
                android:id="@+id/Fiat"
                style="@style/BlueMidCheckBox"
                android:text="@string/fiat" />

            <CheckBox
                android:id="@+id/AlfaRomeo"
                style="@style/BlueCheckBoxes"
                android:text="@string/alfaromeo" />

        </LinearLayout>

        <View style="@style/BlueStripe" />

        <Button
            android:id="@+id/FinishBtn"
            style="@style/BlueFinish"
            android:onClick="finished"
            android:text="@string/finish" />
    </LinearLayout>
</ScrollView>
